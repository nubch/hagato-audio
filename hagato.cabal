      shared-properties
    , vulkan-dependency
  visibility: private
  exposed-modules:
      ChessExample.Component.Animation
      ChessExample.Component.Audio
      ChessExample.Component.Camera
      ChessExample.Component.Environment
      ChessExample.Component.Focus
      ChessExample.Component.Index
      ChessExample.Component.Mesh
      ChessExample.Component.Screen
      ChessExample.Component.Transform
      ChessExample.Game
      ChessExample.GameState
      ChessExample.Sounds
      ChessExample.System.Animator
      ChessExample.System.Artist
      ChessExample.System.Asset
      ChessExample.System.Director
      ChessExample.System.Input
      ChessExample.System.Mixer
      ChessExample.System.Player
      ChessExample.System.Referee
      ChessExample.System.World
      ChessExample.Vulkan.Memory
      ChessExample.Vulkan.Renderer
      ChessExample.Vulkan.Setup
      Effectful.Extra
  hs-source-dirs:
      examples/chess/src
  build-depends:
      apecs-effectful
    , bytestring
    , chessica
    , containers
    , effectful-core
    , effectful-plugin
    , hagato:with-core
    , hagato:with-core-effectful
    , hagato:with-gltf
    , hagato:with-gltf-effectful
    , hagato:with-gltf-vulkan
    , hagato:with-vulkan
    , hagato:with-vulkan-effectful
    , JuicyPixels
    , resource-effectful
    , text
    , vector
    , unified-audio-hs
    , unified-audio-hs:sdl-impl
    , unified-audio-hs:fmod-impl
  ghc-options:
      -fplugin=Effectful.Plugin

  extra-libraries: fmod
  extra-lib-dirs: **PATH_TO_x86_64**  
  ghc-options:
    -optl-Wl,-rpath,**PATH_TO_x86_64**

test-suite chess-glfw
  import:
      shared-properties
    , vulkan-dependency
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs:
      examples/chess/app/chess-glfw
  ghc-options:
    -threaded
    -rtsopts
    -with-rtsopts=-N
    -fplugin=Effectful.Plugin
  build-depends:
      chess
    , effectful-core
    , effectful-plugin
    , hagato:with-core-effectful
    , hagato:with-glfw-effectful
    , hagato:with-vma-effectful
    , hagato:with-vulkan
    , resource-effectful
    , vector
    , unified-audio-hs
    , unified-audio-hs:sdl-impl
    , unified-audio-hs:fmod-impl
  extra-libraries: fmod
  extra-lib-dirs: **PATH_TO_x86_64**  
  ghc-options:
    -optl-Wl,-rpath,**PATH_TO_x86_64**