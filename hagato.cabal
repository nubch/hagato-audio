cabal-version:   3.0
name:            hagato
version:         0.1.0.0
synopsis:        Haskell Gamedev Toolkit
description:     Please see the README on GitHub at <https://github.com/typedbyte/hagato#readme>
homepage:        https://github.com/typedbyte/hagato
bug-reports:     https://github.com/typedbyte/hagato/issues
license:         BSD-3-Clause
license-file:    LICENSE
author:          Michael Szvetits
maintainer:      typedbyte@qualified.name
copyright:       2023 Michael Szvetits
category:        Game
build-type:      Simple
extra-doc-files:
  CHANGELOG.md
  README.md

common shared-properties
  default-language: GHC2021
  build-depends:
      base >=4.7 && <5
  ghc-options:
     -Wall
  default-extensions:
      DuplicateRecordFields
      NoFieldSelectors
      OverloadedRecordDot

common vulkan-dependency
  build-depends:
      vulkan >= 3.23

library with-core
  import: shared-properties
  visibility: public
  hs-source-dirs:
      src/hagato-core
  build-depends:
      time
  exposed-modules:
      Hagato.Core
      Hagato.Core.Animation
      Hagato.Core.Animation.Float
      Hagato.Core.Animation.Vec3
      Hagato.Core.Camera
      Hagato.Core.Extra
      Hagato.Core.Input
      Hagato.Core.Log
      Hagato.Core.Loop
      Hagato.Core.Math
      Hagato.Core.Math.Mat4
      Hagato.Core.Math.Plane
      Hagato.Core.Math.Quaternion
      Hagato.Core.Math.Ray
      Hagato.Core.Math.Vec2
      Hagato.Core.Math.Vec3
      Hagato.Core.Math.Vec4

library with-core-effectful
  import: shared-properties
  visibility: public
  hs-source-dirs:
      src/hagato-core-effectful
  build-depends:
      effectful-core
    , hagato:with-core
  exposed-modules:
      Hagato.Core.Effectful
      Hagato.Core.Effectful.Log

library with-glfw
  import:
      shared-properties
    , vulkan-dependency
  visibility: public
  hs-source-dirs:
      src/hagato-glfw
  build-depends:
      GLFW-b
    , unliftio-core
    , hagato:with-core
    , hagato:with-vulkan
  exposed-modules:
      Hagato.GLFW
      Hagato.GLFW.Input
      Hagato.GLFW.Instance
      Hagato.GLFW.Window

library with-glfw-effectful
  import: shared-properties
  visibility: public
  hs-source-dirs:
      src/hagato-glfw-effectful
  build-depends:
      effectful-core
    , hagato:with-glfw
    , hagato:with-vulkan-effectful
    , resource-effectful
  exposed-modules:
      Hagato.GLFW.Effectful
      Hagato.GLFW.Effectful.Window

library with-gltf
  import: shared-properties
  visibility: public
  hs-source-dirs:
      src/hagato-gltf
  build-depends:
      aeson
    , base64 < 1
    , binary
    , bytestring
    , containers
    , filepath
    , hagato:with-core
    , text
    , vector
  exposed-modules:
      Hagato.GLTF
      Hagato.GLTF.Accessor
      Hagato.GLTF.Animation
      Hagato.GLTF.Asset
